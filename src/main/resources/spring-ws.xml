<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xmlns:jaxws="http://cxf.apache.org/jaxws" 
		xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans.xsd                     
						http://cxf.apache.org/jaxws  
						http://cxf.apache.org/schemas/jaxws.xsd">

	<bean id="userReference" class="com.market.project.service.Impl.UserServiceImpl"></bean>
	<jaxws:server id="userCXFService" serviceClass="com.market.project.service.UserServiceI" address="/userCXFService">
		<jaxws:serviceBean>
			<ref bean="userReference" />
		</jaxws:serviceBean>
		<jaxws:features>
			<bean class="org.apache.cxf.feature.LoggingFeature"></bean>
		</jaxws:features>
	</jaxws:server>
</beans>